<odoo>
    <template id="theme_customize_inherit" inherit_id="website.theme_customize">
        <xpath expr="//content[@id='theme_customize_content_colors']" position="after">
            <content id="theme_customize_content_header" string="Header" title="Choose your Header">
                <!-- In a <more/> so that it is on a new line if themes add options before -->
                <more data-depends="">
                    <list>
                        <opt id="option_header_1" string="Header 1"
                             data-xmlid="tadeas_theme.header_style_transparent">
                            Header 1
                        </opt>
                        <opt id="option_header_2" string="Header 2"
                             data-xmlid="tadeas_theme.header_style_center">
                            Header 2
                        </opt>
                        <opt id="option_header_3" string="Header 3"
                             data-xmlid="tadeas_theme.header_style_default">
                            Header 3
                        </opt>
                    </list>

                </more>
            </content>
            <content id="theme_customize_content_footer" string="Footer" title="Choose your Footer">
                <!-- In a <more/> so that it is on a new line if themes add options before -->
                <more data-depends="">
                    <list>
                        <opt id="option_footer_1" string="Footer 1"
                             data-xmlid="tadeas_theme.footer_default">
                            Header 1
                        </opt>
                        <opt id="option_footer_2" string="Footer 2"
                             data-xmlid="tadeas_theme.footer_fixed">
                            Header 2
                        </opt>
                    </list>
                </more>
            </content>

        </xpath>
    </template>

</odoo>
