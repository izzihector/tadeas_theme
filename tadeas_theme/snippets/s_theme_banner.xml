<odoo>
    <template id="s_theme_banner" name="Theme banner">
        <section class="mt32 mb32">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 d-none d-sm-block col-lg-3 col-sm-3">
                        <div class="porto-links-block wpb_content_element  m-b-none background-color-light">
                            <div class="links-title">Top Categories</div>
                            <div class="links-content">
                                <ul class="nav navbar-nav">
                                    <t t-set="categories"
                                       t-value="website.get_search_categories() if website else None"/>
                                    <t t-if="categories">
                                        <t t-foreach="categories['categories']" t-as="categ">
                                            <li class="porto-links-item nav-item">
                                                <a t-att-href="'/shop/category/%s' % (categ.id)" class="nav-link">
                                                    <i class="fa fa-minus" aria-hidden="true"></i>
                                                    <span t-field="categ.name"></span>
                                                </a>
                                            </li>
                                        </t>
                                    </t>
                                    <div class="vc_empty_space" style="height: 25px">
                                        <span class="vc_empty_space_inner"></span>
                                    </div>
                                    <div class="text-center">
                                        <a class="vc_btn3 vc_btn3-shape-square vc_btn3-block btn btn-md btn-primary"
                                           href="/shop" title="">HUGE SALE - 70% Off
                                        </a>
                                    </div>
                                </ul>
                            </div>
                        </div>
                    </div>

